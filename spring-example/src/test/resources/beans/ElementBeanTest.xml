<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="testScopeSingleton" class="com.zhysunny.spring.beans.TestBean" scope="singleton"></bean>
    <bean name="testScopePrototype" class="com.zhysunny.spring.beans.TestBean" scope="prototype"></bean>

    <bean name="testMeta" class="com.zhysunny.spring.beans.TestBean">
        <meta key="meta_key" value="meta_value"></meta>
    </bean>

    <bean name="testLookupMethod" class="com.zhysunny.spring.beans.lookup_method.AbstractLookupMethod">
        <lookup-method name="getBean" bean="teacher"></lookup-method>
    </bean>

    <bean name="testReplacedMethod" class="com.zhysunny.spring.beans.User">
        <replaced-method name="show" replacer="replacer"></replaced-method>
    </bean>

    <bean name="replacer" class="com.zhysunny.spring.beans.replaced_method.TestReplacedMethod"></bean>

    <bean name="user" class="com.zhysunny.spring.beans.User"></bean>
    <bean name="teacher" class="com.zhysunny.spring.beans.Teacher"></bean>
    <bean name="student" class="com.zhysunny.spring.beans.Student"></bean>

</beans>